{
  "problemMatcher": [
    {
      "owner": "markdown-alerts",
      "severity": "notice",
      "pattern": [
        {
          "regexp": "^> \\[!NOTE\\]$"
        },
        {
          "regexp": "^> (.+)$",
          "message": 1,
          "loop": true
        }
      ]
    },
    {
      "owner": "markdown-alerts",
      "severity": "warning",
      "pattern": [
        {
          "regexp": "^> \\[!WARNING\\]$"
        },
        {
          "regexp": "^> (.+)$",
          "message": 1,
          "loop": true
        }
      ]
    },
    {
      "owner": "markdown-alerts",
      "severity": "error",
      "pattern": [
        {
          "regexp": "^> \\[!CAUTION\\]$|^> \\[!CRITICAL\\]$"
        },
        {
          "regexp": "^> (.+)$",
          "message": 1,
          "loop": true
        }
      ]
    }
  ]
}
